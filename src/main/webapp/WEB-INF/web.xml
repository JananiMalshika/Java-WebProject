<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
     
     <servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.customer.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
     
     <servlet>
		<servlet-name>insert</servlet-name>
		<servlet-class>com.customer.AdminInsert</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>insert</servlet-name>
		<url-pattern>/insert</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>Asearch</servlet-name>
		<servlet-class>com.customer.AdminSearch</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Asearch</servlet-name>
		<url-pattern>/search</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>update</servlet-name>
		<servlet-class>com.customer.AdminUpdate</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>update</servlet-name>
		<url-pattern>/update</url-pattern>
	</servlet-mapping>
     
     <servlet>
		<servlet-name>delete</servlet-name>
		<servlet-class>com.customer.AdminDelete</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>delete</servlet-name>
		<url-pattern>/delete</url-pattern>
	</servlet-mapping>
	
	 <servlet>
		<servlet-name>pay</servlet-name>
		<servlet-class>com.customer.PaymentServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>pay</servlet-name>
		<url-pattern>/pay</url-pattern>
	</servlet-mapping>
     
</web-app>
    